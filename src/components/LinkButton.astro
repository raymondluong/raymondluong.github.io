---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  newPage?: boolean;
}

const {
  href,
  className,
  ariaLabel,
  title,
  disabled = false,
  newPage = false,
} = Astro.props;
---

<a
  type="button"
  href={disabled ? '#' : href}
  tabindex={disabled ? '-1' : '0'}
  class={`group ${className}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
  target={newPage ? '_blank' : undefined}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
</style>
