---
import { BlogSchema } from '../content/config';
import BaseLayout from './BaseLayout.astro';
import dayjs from 'dayjs';
import localizedFormat from 'dayjs/plugin/localizedFormat';

export interface Props extends BlogSchema {}

const { title, description, date } = Astro.props;
dayjs.extend(localizedFormat);
const displayDate = dayjs(date).format('ll');
---

<BaseLayout title={title} description={description}>
  <main class="md:flex md:justify-center">
    <article class="prose max-w-[750px] prose-img:mx-auto">
      <h1 class="title my-2 text-3xl font-bold">{title}</h1>
      {date && <time>{displayDate}</time>}
      <slot />
    </article>
  </main>
</BaseLayout>
